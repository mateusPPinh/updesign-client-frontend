{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext", "ES2016", "ES2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@app/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.js"
, "analytics/GoogleAnalytics.js"  ],
  "exclude": ["node_modules"]
}
